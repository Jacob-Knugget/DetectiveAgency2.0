@model DetectiveAgency.Models.Employee

@{
    ViewData["Title"] = "New Employee Form";
}

<h2>New Employee Form</h2>
<p>Not ready for prime time yet...</p>

<div class="row">
	<h1 class="col-12">Future Value Calculator</h1>
</div>
<div class="row">
	<form asp-action="Index" method="post" class="col-6">
		<div asp-validation-summary="All"></div>
		<div>
			<label asp-for="Id">
				ID:
			</label>
			<input asp-for="Id" />
		</div>
		<div>
			<label asp-for="Name">
				Name:
			</label>
			<input asp-for="Name" />
		</div>
		<div>
			<label asp-for="Hours">Hours:</label>
			<input asp-for="Hours" />
		</div>
		<div>
			<label asp-for="Rate">
				Rate:
			</label>
			<input asp-for="Rate" />
		</div>
		<div>
			<label>Weekly Gross Pay:</label>
			<label>@ViewBag.Salary.ToString("C2")</label>
		</div>
		<button asp-controller="Home" asp-action="CalcPay" type="submit">Calculate Gross Pay</button>
		<button asp-controller="Home" asp-action="Index">Clear</button>
	</form>
</div>


